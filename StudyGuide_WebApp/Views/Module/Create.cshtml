@model StudyGuide_WebApp.Models.ModuleModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ModuleModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="code" class="control-label"></label>
                <input asp-for="code" class="form-control" />
                <span asp-validation-for="code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="credits" class="control-label"></label>
                <input asp-for="credits" class="form-control" />
                <span asp-validation-for="credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="classHours" class="control-label"></label>
                <input asp-for="classHours" class="form-control" />
                <span asp-validation-for="classHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="totalStudyHours" class="control-label"></label>
                <input asp-for="totalStudyHours" class="form-control" />
                <span asp-validation-for="totalStudyHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudyDays" class="control-label"></label>
                <input asp-for="StudyDays" class="form-control" />
                <span asp-validation-for="StudyDays" class="text-danger"></span>
            </div>
            <!-- Add this code right above the semesterId dropdown -->
            <div class="form-group">
                <label asp-for="StudyDays" class="control-label"></label>
                @Html.DropDownListFor(model => model.StudyDays, GetDaysOfWeek(), "Select Study Days", new { @class = "form-control" })
                <span asp-validation-for="StudyDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="semesterId" class="control-label"></label>
                <select asp-for="semesterId" class ="form-control" asp-items="ViewBag.semesterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class ="form-control" asp-items="ViewBag.Id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@functions {
    SelectList GetDaysOfWeek()
    {
        var daysOfWeek = new List<string>
        {
            "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"
        };

        return new SelectList(daysOfWeek);
    }
}
