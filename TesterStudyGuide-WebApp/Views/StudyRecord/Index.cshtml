@model IEnumerable<TesterStudyGuide_WebApp.Models.StudyRecordModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.studyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hoursStudied)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
