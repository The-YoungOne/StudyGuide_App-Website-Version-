        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.studyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hoursStudied)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
