@model TesterStudyGuide_WebApp.Models.ModuleModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ModuleModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.credits)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.credits)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.classHours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.classHours)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.semesterId)
        </dd>
    </dl>

    <form asp-action="Delete" onsubmit="return confirmDelete()">
        <input type="hidden" asp-for="code" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<script>
    function confirmDelete() {
        var result = confirm("\nAre you sure?\n-------------------------\nIf you remove the module, all study records associated with it will also be removed.");

        return result; // If true, the form will be submitted; if false, it won't.
    }
</script>

